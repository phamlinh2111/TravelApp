<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Tên địa điểm -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa địa điểm"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên địa điểm"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/edtPlaceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên địa điểm" />

        <!-- Mô tả -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mô tả" />

        <!-- Giá vé -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá vé"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/edtTicketPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập giá vé"
            android:inputType="number" />

        <!-- Đánh giá -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đánh giá (0-5)"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/edtRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập đánh giá"
            android:inputType="numberDecimal" />

        <!-- Thời gian mở cửa -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian mở cửa"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/edtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: 8:00 - 17:00" />

        <!-- Số điện thoại -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số điện thoại"
            android:inputType="phone" />

        <!-- Loại hình -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại hình"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/edtType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: Du lịch, Văn hóa, Ẩm thực..." />

        <!-- Tỉnh thành -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tỉnh/Thành phố"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <Spinner
            android:id="@+id/spinnerProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Nút chọn ảnh -->
        <Button
            android:id="@+id/btnSelectImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh từ thư viện"
            android:layout_marginTop="16dp" />

        <!-- Hiển thị ảnh đã chọn -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:id="@+id/layoutSelectedImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <!-- Nút lưu -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu địa điểm"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
